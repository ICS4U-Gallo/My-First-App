import java.util.Scanner; 

class Student {
    String name; 
    int age;
    int average;
}

public class database {
    Scanner sc = new Scanner(System.in);
    
    Student[] student = new Student[3];
    
    
    System.out.print("Enter the first student's name: ");
    student[0].name = sc.next();
    
    System.out.print("Enter the first student's age: ");
    student[0].age = sc.nextInt();
    
    System.out.print("Enter the first student's average: ");
    student[0].average = sc.nextInt();
    
    
    System.out.print("Enter the first student's name: ");
    student[1].name = sc.next();
    
    System.out.print("Enter the first student's age: ");
    student[1].age = sc.nextInt();
    
    System.out.print("Enter the first student's average: ");
    student[1].average = sc.nextInt();
    
    
    System.out.print("Enter the first student's name: ");
    student[2].name = sc.next();
    
    System.out.print("Enter the first student's age: ");
    student[2].age = sc.nextInt();
    
    System.out.print("Enter the first student's average: ");
    student[2].average = sc.nextInt();
    
    
    System.out.print("The names are: " + student[0].name + " " + student[1].name + " " + student[2]);
    System.out.print("The ages are: " + student[0].age + " " + student[1].age + " " + student[2].age);
    System.out.print("The averages are: " + student[0].average + " " + student[1].average + " " + student[2].average);
}
